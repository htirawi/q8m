# =============================================================================
# Q8M CLIENT ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and configure with your actual values
# All client variables must be prefixed with VITE_ to be accessible in browser

# -----------------------------------------------------------------------------
# APPLICATION CONFIGURATION
# -----------------------------------------------------------------------------
# Client application URL - Required
# Used in: client/src/composables/useSEO.ts
VITE_CLIENT_URL=http://localhost:5173
# API base URL - Required
# Used in: client/src/composables/useAPI.ts (if exists)
VITE_API_BASE_URL=http://localhost:3000/api

# -----------------------------------------------------------------------------
# INTERNATIONALIZATION
# -----------------------------------------------------------------------------
# Default language - Optional, default: en
# Used in: client/src/main.ts
VITE_I18N_DEFAULT_LANG=en
# Default currency - Optional, default: USD
# Used in: client/src/stores/currency.ts (if exists)
VITE_DEFAULT_CURRENCY=USD

# -----------------------------------------------------------------------------
# OAUTH CONFIGURATION
# -----------------------------------------------------------------------------
# Google OAuth Client ID - Required for Google login
# Used in: client/src/composables/useAuth.ts (if exists)
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
# Facebook App ID - Required for Facebook login
VITE_FACEBOOK_APP_ID=your-facebook-app-id

# -----------------------------------------------------------------------------
# PAYMENT GATEWAY CONFIGURATION
# -----------------------------------------------------------------------------
# PayPal Client ID - Required for PayPal payments
# Used in: client/src/composables/usePayments.ts (if exists)
VITE_PAYPAL_CLIENT_ID=your-paypal-client-id
# APS Merchant ID - Required for APS payments
VITE_APS_MERCHANT_ID=your-aps-merchant-id
# APS Environment - Required (sandbox|production)
VITE_APS_ENVIRONMENT=sandbox
# HyperPay Entity ID - Required for HyperPay payments
VITE_HYPERPAY_ENTITY_ID=your-hyperpay-entity-id

# -----------------------------------------------------------------------------
# PAYMENT GATEWAY TOGGLES
# -----------------------------------------------------------------------------
# Enable PayPal payments - Optional, default: true
VITE_ENABLE_PAYPAL=true
# Enable APS payments - Optional, default: true
VITE_ENABLE_APS=true
# Enable HyperPay payments - Optional, default: false
VITE_ENABLE_HYPERPAY=false

# -----------------------------------------------------------------------------
# CURRENCY CONFIGURATION
# -----------------------------------------------------------------------------
# Supported currencies (comma-separated) - Optional
VITE_SUPPORTED_CURRENCIES=USD,JOD,SAR
# Currency conversion enabled - Optional, default: true
VITE_ENABLE_CURRENCY_CONVERSION=true

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
# Enable registration - Optional, default: true
VITE_ENABLE_REGISTRATION=true
# Enable OAuth login - Optional, default: true
VITE_ENABLE_OAUTH=true
# Enable payments - Optional, default: true
VITE_ENABLE_PAYMENTS=true
# Enable analytics - Optional, default: true
VITE_ENABLE_ANALYTICS=true
# Enable debug mode - Optional, default: false
VITE_ENABLE_DEBUG_MODE=false

# -----------------------------------------------------------------------------
# ANALYTICS CONFIGURATION
# -----------------------------------------------------------------------------
# Google Analytics ID - Optional
VITE_GA_TRACKING_ID=G-XXXXXXXXXX
# Google Tag Manager ID - Optional
VITE_GTM_ID=GTM-XXXXXXX

# -----------------------------------------------------------------------------
# PERFORMANCE CONFIGURATION
# -----------------------------------------------------------------------------
# Enable service worker - Optional, default: true
VITE_ENABLE_SW=true
# Enable PWA features - Optional, default: true
VITE_ENABLE_PWA=true
# Cache version - Optional (for cache busting)
VITE_CACHE_VERSION=1.0.0

# -----------------------------------------------------------------------------
# DEVELOPMENT CONFIGURATION
# -----------------------------------------------------------------------------
# Enable mock payments in development - Optional, default: false
VITE_MOCK_PAYMENTS=false
# Enable development tools - Optional, default: false
VITE_ENABLE_DEV_TOOLS=false
