# ===========================================
# Quiz 8 Mastery - Client Environment Config
# ===========================================

# API Configuration
# Base URL for API requests (without /api/v1)
VITE_API_BASE_URL=http://localhost:3000

# Application Configuration
VITE_APP_NAME=Quiz 8 Mastery
VITE_APP_URL=http://localhost:5173

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PAYPAL=true
VITE_ENABLE_APS=false
VITE_ENABLE_HYPERPAY=false

# OAuth Configuration
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# PayPal Configuration
VITE_PAYPAL_CLIENT_ID=your-paypal-client-id
VITE_PAYPAL_MODE=sandbox

# Analytics & Monitoring
VITE_GA_MEASUREMENT_ID=
VITE_SENTRY_DSN=

# API Versioning
VITE_API_VERSION=v1

# Locale Configuration
VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,ar

# Session Configuration
VITE_SESSION_TIMEOUT=900000

# Development Tools
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_MOCK_API=false

# PWA Configuration
VITE_PWA_ENABLED=true
