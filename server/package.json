{
  "name": "q8m-server",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "q8m Server - Node.js backend API for Quiz 8 Mastery platform with authentication, payments, and analytics",
  "author": "Hussein Tirawi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/htirawi/q8m.git"
  },
  "bugs": {
    "url": "https://github.com/htirawi/q8m/issues"
  },
  "homepage": "https://github.com/htirawi/q8m#readme",
  "keywords": [
    "q8m",
    "nodejs",
    "express",
    "typescript",
    "mongodb",
    "authentication",
    "payments",
    "api",
    "quiz",
    "backend",
    "interview"
  ],
  "scripts": {
    "dev": "tsx watch --respawn -r tsconfig-paths/register src/app.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node -r tsconfig-paths/register dist/app.js",
    "lint": "eslint 'src/**/*.{ts,js}' --max-warnings 0",
    "lint:fix": "eslint 'src/**/*.{ts,js}' --fix --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:integration": "vitest run tests/integration",
    "typecheck": "tsc --noEmit",
    "prepare": "echo 'Husky installed at root level'",
    "validate": "pnpm lint && pnpm typecheck && pnpm test",
    "migrate": "tsx -r tsconfig-paths/register src/migrations/migrate.ts",
    "migrate:001": "tsx -r tsconfig-paths/register src/migrations/migrate.ts 001",
    "migrate:002": "tsx -r tsconfig-paths/register src/migrations/migrate.ts 002",
    "db:migrate": "tsx -r tsconfig-paths/register src/migrations/migrate.ts",
    "db:seed": "tsx -r tsconfig-paths/register src/migrations/migrate.ts 002",
    "db:reset": "tsx -r tsconfig-paths/register scripts/reset.ts"
  },
  "dependencies": {
    "@fastify/cookie": "^9.1.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.0",
    "@fastify/jwt": "^7.2.0",
    "@fastify/multipart": "^8.0.0",
    "@fastify/oauth2": "^7.9.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/redis": "^7.0.2",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.0",
    "fastify": "^4.24.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "nodemailer": "^6.9.0",
    "paypal-rest-sdk": "^1.8.1",
    "zod": "^3.22.0",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^22.7.7",
    "@types/nodemailer": "^6.4.14",
    "@types/paypal-rest-sdk": "^1.7.9",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.4.0",
    "prettier": "^3.3.3",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.6.0",
    "typescript": "^5.6.2",
    "vitest": "^2.1.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
