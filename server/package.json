{
  "name": "q8m-server",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "q8m Server - Node.js backend API for Quiz 8 Mastery platform with authentication, payments, and analytics",
  "author": "Hussein Tirawi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/htirawi/q8m.git"
  },
  "bugs": {
    "url": "https://github.com/htirawi/q8m/issues"
  },
  "homepage": "https://github.com/htirawi/q8m#readme",
  "keywords": [
    "q8m",
    "nodejs",
    "express",
    "typescript",
    "mongodb",
    "authentication",
    "payments",
    "api",
    "quiz",
    "backend",
    "interview"
  ],
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/app.js",
    "lint": "eslint 'src/**/*.{ts,js}' --max-warnings 0",
    "lint:fix": "eslint 'src/**/*.{ts,js}' --fix --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:integration": "vitest run tests/integration",
    "typecheck": "tsc --noEmit",
    "prepare": "echo 'Husky installed at root level'",
    "validate": "pnpm lint && pnpm typecheck && pnpm test",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:seed": "tsx scripts/seed.ts",
    "db:reset": "tsx scripts/reset.ts"
  },
  "dependencies": {
    "@fastify/cookie": "^9.1.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.0",
    "@fastify/jwt": "^7.2.0",
    "@fastify/multipart": "^8.0.0",
    "@fastify/oauth2": "^8.1.2",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/static": "^6.12.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.0.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "dotenv": "^16.3.0",
    "express-rate-limit": "^7.1.0",
    "fastify": "^4.24.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.0",
    "moment": "^2.29.0",
    "mongoose": "^8.0.0",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.0",
    "paypal-rest-sdk": "^1.8.1",
    "redis": "^4.6.0",
    "sharp": "^0.33.0",
    "stripe": "^14.7.0",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@eslint/js": "^9.36.0",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.7.7",
    "@types/nodemailer": "^6.4.14",
    "@types/paypal-rest-sdk": "^1.7.9",
    "@types/uuid": "^9.0.7",
    "@types/validator": "^13.11.7",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^16.4.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "prettier": "^3.3.3",
    "supertest": "^6.3.0",
    "tsx": "^4.6.0",
    "typescript": "^5.6.2",
    "vitest": "^2.1.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
